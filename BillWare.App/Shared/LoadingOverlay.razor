<!-- LoadingOverlay.razor -->
<div class="loading-overlay">
    <RadzenProgressBarCircular ShowValue="true" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Large" ProgressBarStyle="ProgressBarStyle.Info">
        <Template>Espera</Template>
    </RadzenProgressBarCircular>
</div>

<style>
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6); /* Color oscuro para oscurecer el fondo */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Opcional: Estilos para el RadzenProgressBarCircular */
    .rz-progressbar-circular {
        padding: 1rem;
        border-radius: 8px;
        color: #FFF;
    }
</style>

@code{
    [Parameter]
    public bool IsVisible { get; set; } = false;
}