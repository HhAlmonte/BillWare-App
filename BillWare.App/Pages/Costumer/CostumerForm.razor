<RadzenTemplateForm TItem="CostumerModel"
                    Data="@Costumer"
                    Submit="OnSubmit">
    <RadzenRow Gap="1rem">
        <RadzenColumn Size="12"
                      SizeSM="6">
            <RadzenFormField Text="Nombre y Apellido">
                <RadzenTextBox Name="Name"
                               MaxLength="100"
                               @bind-Value="@Costumer.FullName"
                               class="text-box" />

                <RadzenRequiredValidator Component="Name"
                                         Text="Introducir nombre y apellido"
                                         Popup="true"
                                         Style="position: absolute" />
            </RadzenFormField>

            <RadzenFormField Text="Número de teléfono" class="mt-3">
                <RadzenMask Name="Phone"
                            MaxLength="18"
                            @bind-Value="@Costumer.Phone"
                            Mask="(***) ***-****"
                            CharacterPattern="[0-9]"
                            class="text-box" />

                <RadzenRequiredValidator Component="Phone"
                                         Text="Introducir número de teléfono"
                                         Popup="true"
                                         Style="position: absolute" />  
            </RadzenFormField>

            <RadzenFormField Text="Dirección residencial" class="mt-3">
                <RadzenTextBox Name="Address"
                               MaxLength="100"
                               @bind-Value="@Costumer.Address"
                               class="text-box" />
            </RadzenFormField>

            <RadzenFormField Text="Número de identidad" class="mt-3">
                <RadzenMask @bind-Value="Costumer!.NumberId"
                            Mask="***-*******-*"
                            MaxLength="13"
                            CharacterPattern="[0-9]"
                            Name="NumberId"
                            class="text-box" />

                <RadzenRequiredValidator Component="NumberId"
                                         Text="Introducir cédula"
                                         Popup="true"
                                         Style="position: absolute" />
            </RadzenFormField>

            <RadzenButton Text="@ButtonTitle"
                          class="mt-3"    
                          ButtonType="ButtonType.Submit"
                          Style="background-color:#003053; color: #FFF" />
        </RadzenColumn>
    </RadzenRow>
</RadzenTemplateForm>

<style>
    .text-box {
        width: 320px;
    }
</style>
